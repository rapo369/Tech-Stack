apiVersion: v1
kind: Service
metadata:
  name: mongo-shard0-svc
  labels:
    app: mongo-shard0
    facing: internal
    impl: native
    group: mongo
spec:
  ports:
  - protocol: TCP
    port: 27017
    targetPort: 27017
    name: main
  clusterIP: None
  selector:
    app: mongo-shard0
---
apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: mongo-shard0
spec:
  serviceName: mongo-shard0-svc
  selector:
    matchLabels:
      app: mongo-shard0
  replicas: 3
  template:
    metadata:
      labels:
        app: mongo-shard0
        group: mongo
      name: mongo-shard0
    spec:
      affinity:
        podAntiAffinity:
          preferredDuringSchedulingIgnoredDuringExecution:
          - weight: 100
            podAffinityTerm:
              labelSelector:
                matchExpressions:
                - key: group
                  operator: In
                  values:
                  - mongo
              topologyKey: kubernetes.io/hostname
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
            - matchExpressions:
              - key: node.ignite.harman.com/component
                operator: In
                values: ["mongo-shard"]
      containers:
      - name: mongo-shard
        image: mongo:3.4.9
        command: 
          - "mongod"
          - "--keyFile"
          - "/etc/secrets/mongodb-keyfile"
          - "--shardsvr"
          - "--replSet"
          - "shard0"
          - "--port"
          - "27017"
          - "--dbpath"
          - "/data/db"
        ports:
        - containerPort: 27017
          name: main
        volumeMounts:
          - mountPath: /etc/secrets
            name: secrets
          - mountPath: /data/db
            name: data
      volumes:
        - name: secrets
          secret:
            secretName: mongodb-key
            defaultMode: 256
  volumeClaimTemplates:
  - metadata:
      name: data
    spec:
      accessModes: [ "ReadWriteOnce" ]
      resources:
        requests:
          storage: 442Gi
      storageClassName: local-storage
